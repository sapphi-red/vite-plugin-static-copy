    "prettier": "^2.8.4",
    "throttle-debounce": "^5.0.0",
    "tsup": "^6.6.3",
    "typescript": "^4.9.5",
    "vite": "^4.1.4",
    "vitest": "^0.29.1",
    "vitest-github-actions-reporter": "^0.9.0"
